{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": [
            "es2015"
        ],
        "sourceMap": true,
        "outDir": "./dist/",
        "rootDir": "./src/",
        "strict": true,
        "noUnusedLocals": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
    },
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
